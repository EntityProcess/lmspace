# Copy this file to `.env` or export the variables manually before running lmspace.

# Required Azure OpenAI settings
AZURE_OPENAI_ENDPOINT="https://your-openai-resource.openai.azure.com/"
AZURE_OPENAI_API_VERSION="2024-05-01-preview"
AZURE_OPENAI_DEPLOYMENT_NAME="gpt-4o-mini"
# Provide either an API key or rely on Azure AD (DefaultAzureCredential)
AZURE_OPENAI_API_KEY="your-azure-openai-key"

# Optional credentials for Azure Active Directory login flows
AZURE_TENANT_ID=""
AZURE_CLIENT_ID=""
AZURE_CLIENT_SECRET=""

# Optional: GitHub token for downloading private repository content
GITHUB_TOKEN=""

# Optional: Customize runner behaviour
LMSPACE_VECTOR_PREFIX="lmspace"
LMSPACE_LOG_LEVEL="info"
